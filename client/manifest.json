{
    "name": "Watch Together",
    "description": "Watch any video content on the web in real time with your friends",    
    "version": "0.1",
    "manifest_version": 2,
    "icons": {
    	"16": "assets/icon16.png",
    	"32": "assets/icon32.png",
    	"128": "assets/icon128.png"
    },
    "permissions": [
      "background",
      "tabs",
      "activeTab",
      "scripting",
      "http://*/",
      "https://*/"
    ],
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "js": ["content.js"],
        "all_frames": true
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "views/popup.html"
    }
  }
